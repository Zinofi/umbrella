    <LangVersion>latest</LangVersion>
    <Configurations>Debug;Release;TeamServices</Configurations>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Umbrella.ActiveDirectory</PackageId>
    <Version>2.0.0-rc-00023</Version>
    <Authors>Richard Edwards</Authors>
    <Company>Zinofi Digital Ltd</Company>
    <Copyright>Zinofi Digital Ltd 2018</Copyright>
