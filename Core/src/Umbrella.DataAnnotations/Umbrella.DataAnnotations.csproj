<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Umbrella.DataAnnotations</PackageId>
    <Version>2.0.0-rc-00004</Version>
    <Authors>Richard Edwards</Authors>
    <Company>Zinofi Digital Ltd</Company>
    <Copyright>Zinofi Digital Ltd 2017</Copyright>
    <Description>
      This package contains a range of data annotation attributes that go beyond the standard ones available
      in the System.ComponentModel.DataAnnotations namespace.
      This package was originally cloned from: https://foolproof.codeplex.com/ and contains fixes and enhancements to the original code.
      This license for the original code can be found here: https://foolproof.codeplex.com/license
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="ClientScripts\*.js" Exclude="bin\**;obj\**;**\*.xproj;packages\**;@(EmbeddedResource)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.4.1" />
  </ItemGroup>

</Project>
